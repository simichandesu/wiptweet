<div class="row">

  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    
  <div class="col-md-8">
    <h1>Microposts</h1>
    
    <section class="content">
      <% @microposts.each do |post| %>
        <% if 0 != post.summary.index("RT") %>
        <p><%= post.title %><br></p>
        <ul>
          <li><%= simple_format post.summary %></li>
          <li><%= post.url %></li><br>
        </ul>
        <% end %>
      <% end %>
    </section>
  
  </div>

</div>